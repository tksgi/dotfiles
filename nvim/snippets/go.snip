    package main

    import (
        "bufio"
        "fmt"
        "os"
        "strconv"
    )

    var sc = bufio.NewScanner(os.Stdin)

    func main() {
        sc.Split(bufio.ScanWords)
    }

    func nextInt() int {
        sc.Scan()
        i, e := strconv.Atoi(sc.Text())
        if e != nil {
            panic(e)
        }
        return i
    }
